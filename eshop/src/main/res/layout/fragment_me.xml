<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_splash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_page"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/colorPrimaryDark">
        <com.pkmmte.view.CircularImageView
            android:id="@+id/iv_user_head"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/user_ico"
            app:border="true"
            app:border_color="#16f5f5f5"
            app:border_width="6dp"
            />
        <TextView
            android:id="@+id/tv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录|注册"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_person_info"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:drawableRight="@drawable/selector_item_go"
        android:text="个人信息"
        android:gravity="center_vertical"
        android:textColor="@color/text_goods_name"
        android:textSize="18sp"
        android:paddingLeft="20dp"
        android:padding="10dp"
        android:layout_marginTop="6dp"
        />
    <TextView
        android:id="@+id/tv_person_goods"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:drawableRight="@drawable/selector_item_go"
        android:text="我的商品"
        android:gravity="center_vertical"
        android:textColor="@color/text_goods_name"
        android:textSize="18sp"
        android:paddingLeft="20dp"
        android:padding="10dp"
        android:layout_marginTop="6dp"
        />
    <TextView
        android:id="@+id/tv_person_upload"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:drawableRight="@drawable/selector_item_go"
        android:text="商品上传"
        android:gravity="center_vertical"
        android:textColor="@color/text_goods_name"
        android:textSize="18sp"
        android:paddingLeft="20dp"
        android:padding="10dp"
        android:layout_marginTop="6dp"
        />

</LinearLayout>
